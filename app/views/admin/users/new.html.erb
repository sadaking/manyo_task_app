<div class="view_title">
  <h2>ユーザー作成</h2>
</div>
<br>
<div class="container-fluid">
  <div class="form-group">
    <%=form_with(model: @user, local: true, url:  admin_users_path, method: :post) do |f| %>
      <div>
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name %>
      </div>
      <br>
      <div>
        <%= f.label :email, 'メールアドレス'%>
        <%= f.text_field :email %>
      </div>
      <br>
      <div>
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password %>
      </div>
      <br>
      <div>
        <%= f.label :password_confirmation, "パスワード再入力" %>
        <%= f.password_field :password_confirmation %>
      </div>
      <br>
      <div>
        <%= f.label :admin, "管理者権限" %>
        <%= f.check_box(:admin, {}, checked_value = "true", unchecked_value = "false" ) %>
      </div>
      <br>
      <div>
        <%= f.submit '登録する' %>
      </div>
    <% end %>
  </div>
</div>

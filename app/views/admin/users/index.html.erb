<div class="container-fluid">
  <div class="view_title">
    <h2>管理画面　ユーザー一覧</h2>
  </div>
  <br>
<div class="container-fluid">
  <div class="form-group">
    <%= link_to "新規登録", new_admin_user_path , class:"btn btn-primary" %>
    <table class="table">
      <thead>
        <th>id</th>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>登録日</th>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.strftime("%Y年%m月%d日") %></td>
            <% if user.admin %>
              <td>管理者権限あり</td>
            <% else %>
              <td>管理者権限なし</td>
            <% end %>
            <td><p>タスク数：<%= user.tasks.count %></p></td>
            <td><%= link_to '詳細', admin_user_path(user.id), class: "btn btn-info" %></td>
            <td><%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-info" %></td>
            <td><%= link_to '削除', admin_user_path(user.id) , class: "btn btn-danger", method: :delete, data: { confirm: '削除してもいいですか？' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'task一覧画面へ', tasks_path %>
  </div>
</div>
